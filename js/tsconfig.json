{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext"
        ],
        "esModuleInterop": true,
        "incremental": true,
        "noEmit": false,
        "composite": false,
        "declaration": true,
        "strict": true,
        "useUnknownInCatchVariables": true,
        "allowJs": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@cronos-so/web": ["web/src"]
        }
    },
    "exclude": [
        "dist",
        "node_modules",
        ".yarn"
    ]
}