{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "paths": {},
        "types": [
            "mocha",
            "chai"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "incremental": true,
        "noEmit": false,
        "composite": false,
        "declaration": true,
        "strict": true,
        "useUnknownInCatchVariables": true,
        "allowJs": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx"
    },
    "exclude": [
        "dist",
        "node_modules",
        ".yarn"
    ]
}